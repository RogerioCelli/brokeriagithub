# ========================================
# Configurações do PostgreSQL
# ========================================
# IMPORTANTE: Substitua pelos seus valores reais

# Host do banco de dados
# Local: localhost
# VPS Hostinger: localhost (se o PostgreSQL estiver na mesma VPS)
# Servidor externo: IP ou domínio do servidor
DB_HOST=localhost

# Porta do PostgreSQL (padrão: 5432)
DB_PORT=5432

# Nome do banco de dados
# Use o nome do seu banco onde está a tabela brokeria_registros_brokeria
DB_NAME=seu_banco_de_dados

# Usuário do PostgreSQL
DB_USER=seu_usuario

# Senha do PostgreSQL
DB_PASSWORD=sua_senha

# ========================================
# Configurações do Servidor
# ========================================

# Porta onde o servidor Node.js vai rodar
# Se usar Nginx, pode manter 3000
# Se não usar Nginx, pode usar 80 (requer sudo)
PORT=3000

# ========================================
# Ambiente
# ========================================
NODE_ENV=production
